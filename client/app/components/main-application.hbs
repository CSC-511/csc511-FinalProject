<div>
    <Navbar
        @changePage={{this.navigateTo}}
        @betInfoHandler={{this.betInfoHandler}}
    />
</div>


{{#if this.isProfilePage}}
    <div class = 'left'>
    <ProfilePage 
        @model={{@model}}
        @changePage={{this.navigateTo}}
        @betInfoHandler={{this.betInfoHandler}}
    />
    </div>

    <div class = 'right'>
    <FriendsList/>
    <AddFriend/>
    </div>
    
{{/if}}

{{#if this.isCreateBetPage}}
    <div class = 'left'>
    <IndividualBet 
        @model={{@model}}
        @betId={{this.betID}}
        @displayCreateBet={{this.displayCreateBet}}
    />
    </div>

    <div class = 'right'>
    <FriendsList/>
    <AddFriend/>
    </div>
    
{{/if}}

{{#if this.isSignUpPage}}
    <SignUp
        @model={{@model}}
    />
{{/if}}